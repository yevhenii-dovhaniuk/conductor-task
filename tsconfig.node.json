{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2015", "es2017", "dom"],
    "rootDir": "server/",
    "outDir": "server/dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node"]
  },
  "include": [
    "server/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}